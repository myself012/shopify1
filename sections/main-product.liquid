<section class="page-width section-product">
  <div class="grid grid--2-col grid--1-col-tablet-down">
    
    <!-- Product Gallery -->
    <div class="product__media-wrapper">
      <div class="product__media-list">
        {%- if product.selected_or_first_available_variant.featured_media != null -%}
          {%- assign featured_media = product.selected_or_first_available_variant.featured_media -%}
           <img src="{{ featured_media | image_url: width: 1000 }}" alt="{{ featured_media.alt | escape }}" class="product__main-image">
        {%- else -%}
           <img src="{{ product.featured_media | image_url: width: 1000 }}" alt="{{ product.featured_media.alt | escape }}" class="product__main-image">
        {%- endif -%}
      </div>
    </div>

    <!-- Product Info -->
    <div class="product__info-wrapper">
      <div class="product__info-container">
        
        <h1 class="product__title h2">{{ product.title | escape }}</h1>

        <div class="price-wrapper">
          <span class="price h4">{{ product.price | money }}</span>
          {%- if product.compare_at_price > product.price -%}
             <s class="price-strikethrough">{{ product.compare_at_price | money }}</s>
          {%- endif -%}
        </div>

        <div class="product__description rte">
          {{ product.description }}
        </div>

        {%- form 'product', product -%}
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          
          <div class="product-form__buttons">
            <button type="submit" name="add" class="button button--full-width button--primary"
            {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}>
              {% if product.selected_or_first_available_variant.available %}
                Add to cart
              {% else %}
                Sold out
              {% endif %}
            </button>
             {{ form | payment_button }}
          </div>
        {%- endform -%}

        <!-- Trust Badges -->
        <div class="trust-badges">
          <div class="trust-item">
            <span>üöö</span>
            <p>Fast Delivery</p>
          </div>
          <div class="trust-item">
            <span>üîÑ</span>
            <p>Easy Returns</p>
          </div>
          <div class="trust-item">
            <span>üõ°Ô∏è</span>
            <p>Secure Payments</p>
          </div>
           {%- if section.settings.show_cod -%}
            <div class="trust-item">
                <span>üíµ</span>
                <p>COD Available</p>
            </div>
           {%- endif -%}
        </div>

      </div>
    </div>
  </div>
</section>

<style>
  .product__main-image {
    width: 100%;
    border-radius: var(--border-radius);
    border: 1px solid var(--color-border);
  }
  .product__info-wrapper {
    padding-left: 40px;
  }
  .product__title {
    margin-bottom: 10px;
  }
  .price {
    color: var(--color-primary);
    font-weight: bold;
    font-size: 1.5rem;
  }
  .trust-badges {
    display: flex;
    gap: 20px;
    margin-top: 30px;
    border-top: 1px solid var(--color-border);
    padding-top: 20px;
  }
  .trust-item {
    text-align: center;
    font-size: 0.9rem;
  }
  .trust-item span {
    font-size: 1.5rem;
    display: block;
    margin-bottom: 5px;
  }
  @media screen and (max-width: 768px) {
    .product__info-wrapper {
      padding-left: 0;
      margin-top: 20px;
    }
  }
</style>

{% schema %}
{
  "name": "Product Information",
  "settings": [
    {
        "type": "checkbox",
        "id": "show_cod",
        "label": "Show COD Badge",
        "default": true
    }
  ]
}
{% endschema %}
