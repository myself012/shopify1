<div class="featured-collection section page-width">
  <div class="title-wrapper center">
    {%- if section.settings.title != blank -%}
      <h2 class="title h2">{{ section.settings.title }}</h2>
    {%- endif -%}
  </div>

  <div class="grid grid--4-col grid--2-col-tablet-down">
    {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
        {% render 'product-card', product: product %}
    {%- else -%}
      {%- for i in (1..4) -%}
        <div class="card-wrapper">
             <div class="card card--product">
                <div class="card__inner">
                    <div class="card__image-wrapper">
                         {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                </div>
                <div class="card__content">
                    <h3>Example Product {{ i }}</h3>
                    <p>$19.99</p>
                </div>
             </div>
        </div>
      {%- endfor -%}
    {%- endfor -%}
  </div>
  
  {%- if section.settings.show_view_all -%}
    <div class="center" style="margin-top: 40px;">
      <a href="{{ section.settings.collection.url }}" class="button">View All</a>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured Collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 2,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Enable \"View all\" button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
