<div class="hero section">
  <div class="page-width">
    <div class="hero__content center">
      <div class="hero__box">
        {%- if section.settings.heading != blank -%}
          <h2 class="hero__heading h1">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          <div class="hero__text rte">{{ section.settings.subheading }}</div>
        {%- endif -%}
        {%- if section.settings.button_label != blank -%}
          <div class="hero__buttons">
            <a href="{{ section.settings.button_link }}" class="button button--primary">{{ section.settings.button_label }}</a>
            {%- if section.settings.button_label_2 != blank -%}
              <a href="{{ section.settings.button_link_2 }}" class="button button--secondary">{{ section.settings.button_label_2 }}</a>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

<style>
  .hero {
    background-color: var(--color-bg);
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center; /* Center horizontally */
    background-image: url('{{ section.settings.image | image_url: width: 2000 }}');
    background-size: cover;
    background-position: center;
    position: relative;
    border-radius: var(--border-radius);
    overflow: hidden;
    margin-top: 20px;
    text-align: center; /* Ensure text inside is centered */
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.4); /* Light overlay for readability */
    z-index: 1;
  }

  .hero__content {
    position: relative;
    z-index: 2;
    max-width: 600px;
    margin: 0 auto; /* Center the content block */
    background: rgba(255, 255, 255, 0.85); /* Proper frostrad glass effect */
    padding: 40px;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-soft);
    backdrop-filter: blur(10px);
  }

  .hero__heading {
    margin-bottom: 20px;
    color: var(--color-heading);
  }

  .hero__text {
    margin-bottom: 30px;
    font-size: 1.1rem;
    color: var(--color-text);
  }

  .hero__buttons {
    display: flex;
    gap: 15px;
    justify-content: center;
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Everything Your Home Needs"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Discover our curated collection of home essentials.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Secondary Button Label",
      "default": "Explore Categories"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Secondary Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
