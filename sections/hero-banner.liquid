<div class="hero section">
  <div class="page-width">
    {%- if section.settings.image != blank -%}
        <div class="hero__image-container">
            {{ section.settings.image | image_url: width: 2000 | image_tag: 
                class: 'hero__image', 
                loading: 'eager', 
                sizes: '(min-width: 1200px) 1200px, 100vw'
            }}
        </div>
    {%- else -%}
        <div class="hero__image-placeholder">
             {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
    {%- endif -%}
    
    <div class="hero__content center">
      <div class="hero__box">
        {%- if section.settings.heading != blank -%}
          <h2 class="hero__heading h1">{{ section.settings.heading | escape }}</h2>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          <div class="hero__text rte">{{ section.settings.subheading }}</div>
        {%- endif -%}
        <div class="hero__buttons">
          {%- if section.settings.button_label != blank -%}
            <a href="{{ section.settings.button_link }}" class="button button--primary">{{ section.settings.button_label | escape }}</a>
          {%- endif -%}
          {%- if section.settings.button_label_2 != blank -%}
              <a href="{{ section.settings.button_link_2 }}" class="button button--secondary">{{ section.settings.button_label_2 | escape }}</a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .hero {
    position: relative;
    border-radius: var(--border-radius);
    overflow: hidden;
    margin-top: 20px;
    text-align: center;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text);
  }

  .hero__image-container, .hero__image-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .hero__image, .hero__image-placeholder svg {
      width: 100%;
      height: 100%;
      object-fit: cover;
  }

  .hero__content {
    position: relative;
    z-index: 2;
    max-width: 600px;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.85);
    padding: 40px;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-soft);
    backdrop-filter: blur(10px);
  }

  .hero__heading {
    margin-bottom: 20px;
    color: var(--color-heading);
  }

  .hero__text {
    margin-bottom: 30px;
    font-size: 1.1rem;
    color: var(--color-text);
  }

  .hero__buttons {
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Everything Your Home Needs"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Discover our curated collection of home essentials.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Secondary Button Label",
      "default": "Explore Categories"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Secondary Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
