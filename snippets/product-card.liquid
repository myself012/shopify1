{% comment %}
    Renders a product card
    Accepts:
    - product: {Object} Product Liquid object
{% endcomment %}

<div class="card-wrapper">
  <div class="card card--product" tabindex="-1">
    <div class="card__inner">
      <div class="card__image-wrapper">
        <a href="{{ product.url }}" class="full-unstyled-link">
          {%- if product.featured_media -%}
            {{ product.featured_media | image_url: width: 533 | image_tag: 
                class: 'card__image motion-reduce',
                loading: 'lazy',
                widths: '165, 360, 533, 720, 940, 1066',
                sizes: '(min-width: 1200px) 267px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)'
            }}
          {%- else -%}
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </a>
      </div>
    </div>
    <div class="card__content">
      <div class="card__information">
        <h3 class="card__heading h5">
          <a href="{{ product.url }}" class="full-unstyled-link">
            {{ product.title | escape }}
          </a>
        </h3>
        <div class="card-information">
          <div class="price">
            <span class="price-item price-item--regular">
              {{ product.price | money }}
            </span>
          </div>
        </div>
      </div>
      <form method="post" action="/cart/add">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
        <button type="submit" class="button button--full-width button--secondary" style="margin-top: 10px;">Add to Cart</button>
      </form>
    </div>
  </div>
</div>
